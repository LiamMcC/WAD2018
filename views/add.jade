extends layout
block content
    .row
     h1 Welcome to the create products page  <br><br>
             .formHold 
                h1.itemtitle   Add a New item  <br><br>    
                      form(method="post")
                        fieldset.form-group
                         label(for="name") Product Name:
                         input(name="name", type="text", placeholder="Enter a Name")
                         label(for="sport") Sport:
                         input(name="sport", type="text", placeholder="Enter a Sport")
                         label(for="price") Price:
                         input(name="price", type="text", placeholder="Enter a Price")
                         label(for="image") Image:
                         input(name="image", type="text", placeholder="Enter an image url")
                         small.text-muted Enter a name
                         button.button(type="submit") create a new room